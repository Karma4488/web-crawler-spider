# WebSpider Pro Environment Configuration
# Copy this file to .env and update the values as needed

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Port for the development server (default: 8080)
PORT=8080

# Node environment (development, production, test)
NODE_ENV=development

# Enable debug logging (true/false)
DEBUG=false

# =============================================================================
# CRAWLER SETTINGS
# =============================================================================

# Default User Agent string for web requests
DEFAULT_USER_AGENT="WebSpider Pro 1.0 (+https://github.com/yourusername/webspider-pro)"

# Maximum concurrent requests allowed globally
MAX_CONCURRENT_REQUESTS=20

# Default request timeout in milliseconds
DEFAULT_REQUEST_TIMEOUT=30000

# Maximum crawl depth allowed
MAX_CRAWL_DEPTH=10

# Maximum pages per crawl session
MAX_PAGES_PER_CRAWL=10000

# Default delay between requests in milliseconds
DEFAULT_CRAWL_DELAY=1000

# Enable robots.txt checking by default (true/false)
RESPECT_ROBOTS_TXT=true

# =============================================================================
# DATABASE CONFIGURATION (Optional)
# =============================================================================

# PostgreSQL connection string for persistent storage
# If not provided, the app will use in-memory storage
# DATABASE_URL="postgresql://username:password@localhost:5432/webspider"

# Database connection pool settings
# DB_POOL_MIN=5
# DB_POOL_MAX=20

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================

# Redis connection string for caching and session storage
# If not provided, the app will use in-memory caching
# REDIS_URL="redis://localhost:6379"

# Redis connection settings
# REDIS_PASSWORD=""
# REDIS_DB=0

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret key for session management and JWT tokens
# Generate a strong random string for production
SECRET_KEY="your-super-secret-key-change-this-in-production"

# CORS allowed origins (comma-separated)
# For development, "*" allows all origins
CORS_ORIGINS="*"

# Rate limiting settings
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API versioning
API_VERSION="v1"

# Enable API documentation endpoint (true/false)
ENABLE_API_DOCS=true

# Maximum file upload size in bytes (for exports)
MAX_UPLOAD_SIZE=10485760  # 10MB

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL="info"

# Enable request logging (true/false)
LOG_REQUESTS=true

# Sentry DSN for error reporting (optional)
# SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# Email service configuration for notifications
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# Webhook URL for crawl completion notifications
# WEBHOOK_URL="https://your-webhook-endpoint.com/crawl-complete"

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Node.js memory limit (in MB)
NODE_MAX_OLD_SPACE_SIZE=4096

# Enable clustering for multi-core utilization (true/false)
ENABLE_CLUSTERING=false

# Number of worker processes (auto-detect if not specified)
# CLUSTER_WORKERS=4

# Cache TTL in seconds
CACHE_TTL=3600  # 1 hour

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable hot module replacement (true/false)
HMR_ENABLED=true

# Development server proxy settings
# DEV_PROXY_TARGET="http://localhost:3001"

# Mock external services in development (true/false)
MOCK_EXTERNAL_SERVICES=false
